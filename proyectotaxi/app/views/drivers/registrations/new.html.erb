<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>Login</title>
    <link rel="stylesheet" href="/assets/bootstrap.min.css" media="all" type="text/css">
</head>
<body>
<div class="container">
<h2 class="text-center"><strong>Nuevos Conductores</strong></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, label: 'Correo Electronico' %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: 'Contraseña' %>
    <%= f.input :password_confirmation, required: true, label: 'Para confirmar la Contraseña' %>
    <%= f.input :username, label: 'Nombres y Apellidos' %>
    <%= f.input :telefono, label: 'Telefono' %>
    <%= f.input :movil, label: 'Celular' %>
    <%= f.input :direccion, label: 'Dirección' %>
    <%= f.input :dni, label: 'D.N.I.' %>
    <%= f.input :licencia, label: 'Licencia de Conducir' %>
    <%= f.input :marca %>
    <%= f.input :modelo %>
    <%= f.input :placa %>
    <%= f.input :color %>
    <%= f.input :tipo, priority: "sedan", collection: ["sedan", "hachback", "pickup"] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "drivers/shared/links" %>
</div>
</body>
</html>
