<%= simple_form_for(@reserva) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :fecha %>
    <%= f.input :direccion_salida, label: "Dirección del Punto de Partida" %>
    <%= f.input :distrito_salida, label: "Distrito del Punto de Partida", collection: ["CERCADO DE LIMA", "SAN ISIDRO", "SAN BORJA", "MIRAFLORES", "SANTIAGO", "SURQUILLO", "CALLAO", "AEROPUERTO"] %>
    <%= f.input :direccion_llegada, label: "Dirección del Destino" %>
    <%= f.input :distrito_llegada, label: "Distrito del Destino", collection: ["CERCADO DE LIMA", "SAN ISIDRO", "SAN BORJA", "MIRAFLORES", "SANTIAGO", "SURQUILLO", "CALLAO", "AEROPUERTO"]  %>
    <%= f.input :modalidad, label: "Modalidad de Carroceria", collection: ["Economico", "Lujo", "Camioneta"] %>
    <%= f.input :referencia, label: "Referencia" %>
    <%= f.input :fecha_recojo, label: "Fecha de Recojo" %>
    <%= f.input :hora_recojo, label: "Hora de Recojo (Debe indicar (am / pm)", collection: ["1:00am", "2:00am", "3:00am", "4:00am", "5:00am", "6:00am", "7:00am", "8:00am", "9:00am", "10:00am", "11:00am", "12:00pm", "1:00pm", "2:00pm", "3:00pm", "4:00pm", "5:00pm", "6:00pm", "7:00pm", "8:00pm", "9:00pm", "10:00pm", "11:00pm", "12:00am" ] %>
    <%= f.input :pedido, label: "Pedido", collection: @mensaje %>
    <%= f.input :user_id, :as => :hidden, input_html: { value: @usuario } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
